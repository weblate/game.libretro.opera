<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.opera"
		name="The 3DO Company - 3DO (Opera)"
		version="1.0.0.17"
		provider-name="trapexit, JohnnyDude, FreeDO team">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.3do" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>3DO</platforms>
		<extensions>iso|bin|chd|cue</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>true</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">The 3DO Company - 3DO (Opera) 1.0.0</summary>
		<description lang="en_GB">Opera emulates the 3DO Interactive Multiplayer video game system, often called simply the 3DO.

Opera is a fork of 4DO, which is based on the FreeDO source code.

Supported files: .iso, .bin, .chd, .cue</description>
		<license>LGPL/Non-commercial</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.opera</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>
